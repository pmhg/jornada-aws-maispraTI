{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "build"
  },
  "exclude": ["node_modules", "./**/*__tests__"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}